<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/news_item"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/color_fafafa">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:id="@+id/news_src" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/news_src"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/news_src"
            android:lines="2"
            android:id="@+id/news_title"
            android:textSize="18sp"
            android:textColor="@color/color_de000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_title"
            android:layout_toRightOf="@+id/news_src"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:id="@+id/news_digest"
            android:textSize="14sp"
            android:textColor="@color/color_8a000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_below="@id/news_digest"
            android:layout_marginBottom="4dp"
            android:id="@+id/news_time"
            android:text="05-28 20:09"
            android:textSize="12sp"
            android:textColor="@color/color_8a000000"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
