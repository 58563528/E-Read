<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_03a9f4</item>    <!--标题栏颜色-->
        <item name="colorPrimaryDark">@color/color_039be5</item>    <!--状态栏颜色-->
        <item name="colorAccent">@color/color_ff5252</item>  <!--UI控件-->
        <item name="windowActionBar">false</item>   <!--去掉ActionBar-->
        <item name="windowNoTitle">true</item>  <!--去掉标题-->
        <!--<item name="android:screenOrientation">portrait</item>-->
        
        <item name="android:windowTranslucentStatus">true</item>    <!--使toolBar颜色和状态栏颜色一致-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="Theme.AppCompat.Light"/>
    
    <style name="TransparentText_large">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">64dp</item>
    </style>

    <style name="TransparentText_small">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">48dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

</resources>
